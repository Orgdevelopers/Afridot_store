<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraActivities.VerifyEmail"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:elevation="@dimen/_20sdp"
        android:background="@color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal">

            <TextView
                android:id="@+id/header_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/dark_grey"
                android:text="In order to use our app publish service you need to verify your email address"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_20sdp"
                android:text="please press ''Verify'' button if the email: adrrr belongs to you"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsbro"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"/>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="4">


                <TextView
                    android:id="@+id/cancelbutton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_weight="1.95"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/gainsbro" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/verifyemailbutton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_weight="1.95"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Verify"
                    android:textAllCaps="false"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>